    <header class="header-wrapper">
      <div class="header-inner">

        <div class="header-main-links">
          {% include 'site-nav' %}
        </div> <!-- header-main-links -->

        <div class="header-logo-wrapper">
          <a id="logo" class="header-logo" href="/">
            {% comment %}{{ 'logo.png' | asset_url }}{% endcomment %}
          </a>
          {% if template == 'index' %}
          {% comment %}
            Many SEO audit tools look for a h1 tag on the home page. Let's give 'em one.
            Other pages should use the resource name as h1 tag. For example, on the product
            page, the product title will use a h1 tag.
          {% endcomment %}
          <h1 class="hide-text">{{ shop.name }}</h1>
          {% endif %}
        </div> <!-- header-logo -->

        <div class="header-secondary-links">

          {% if settings.header_note %}
            <h6 class="header-note">{{ settings.header_note }}</h6>
          {% endif%}

          <div class="cart-link">
            <a href="/cart">Bag ({{ cart.item_count }}) {% comment %}{{ cart.item_count | pluralize: 'item', 'items' }}{% endcomment %} {% comment %}({{ cart.total_price | money }}){% endcomment %}</a>
          </div>

          {% if shop.customer_accounts_enabled %}
          <div class="customer-links">
            {% if customer %}
              Logged in as <a href="/account">{{ customer.first_name }}</a> Â· {{ 'Log out' | customer_logout_link }}
            {% else %}
              {{ 'Log in' | customer_login_link }}
              {% if shop.customer_accounts_optional %}
              or {{ 'Create an account' | customer_register_link }}
              {% endif %}
            {% endif %}
          </div>
          {% endif %}

        </div> <!-- header-secondary -->

      </div> <!-- header-inner -->
    </header> <!-- header -->